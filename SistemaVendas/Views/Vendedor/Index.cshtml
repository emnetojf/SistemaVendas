@model IEnumerable<SistemaVendas.Models.VendedorModel>

@{
    ViewData["Title"] = "Lista de Vendedores";
}

<h3>@ViewData["Title"]</h3>


<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Email</th>            
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var item in (List<VendedorModel>) ViewBag.ListaVendedors)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>                
                    <td>
                        <button class="btn btn-warning btn-primary" type="button"  onclick="Edit(@item.Id)">Editar</button>
                        <button class="btn btn-danger btn-primary" type="button"  onclick="Delete(@item.Id)">Excluir</button>
                    </td>

                </tr>
            }
        }
    </tbody>
</table>

<div>
    <button class="btn btn-default btn-primary" type="button" onclick="Create()">Cadastrar</button>
    <a asp-action="../Home/Menu">Retorna Menu</a>
</div>


<script>
    function Create()
    {
        window.location.href = "../Vendedor/Create"
    }

    
    function Edit(id)
    {
        window.location.href = "../Vendedor/Create/" + id
    }

    function Delete(id)
    {
        window.location.href = "../Vendedor/Delete/" + id
    }
    
</script>