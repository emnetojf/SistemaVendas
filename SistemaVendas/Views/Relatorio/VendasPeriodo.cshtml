@model SistemaVendas.Models.RelatorioModel;
@{
    ViewData["Title"] = "Vendas por Período";
}

<h2>@ViewData["Title"]</h2>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Relatorio" asp-action="VendasPeriodo">

            <div class="form-group">
                <label class="control-label">CPF</label>
                <input asp-for="DataInicio" type="date" class="form-control" />

            </div>
            <div class="form-group">
                <input asp-for="DataFim" type="date" class="form-control" />
            </div>
                
            <div class="form-group">
                <button type="submit" class="btn btn-default btn-success">Pesquisar</button>
            </div>
        </form>
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Data Venda</th>
                <th>Vendedor</th>
                <th>Cliente</th>
                <th>Total Venda</th>
            </tr>
        </thead>
        <tbody>
            @{
                try
                {
                    foreach (var item in (List<VendaModel>)ViewBag.ListaVendas)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataVenda)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.VendedorId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ClienteId)
                            </td>
                            <td>
                                R$ @Html.DisplayFor(modelItem => item.TotalVend)
                            </td>
                        </tr>
                    }
                }
                catch { }
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="Index">Retorna Lista</a>
</div>